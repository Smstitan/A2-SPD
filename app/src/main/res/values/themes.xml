<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.T2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorPrimaryVariant">#FFC0CB</item>
        <item name="colorOnPrimary">#6200EE</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#03DAC5</item>
        <item name="colorSecondaryVariant">#03DAC5</item>
        <item name="colorOnSecondary">#ff0000</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.T2.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.T2.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.T2.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>